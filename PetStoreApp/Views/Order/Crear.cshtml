@using PetStore.Modelos
@model CrearOrderViewModel
@{
    ViewData["Title"] = "Crear mascota";
}

<h1>Creación de mascota</h1>

<div asp-validation-summary="ModelOnly" class="test-danger"></div>

<form asp-action="Crear">
    <div class="mb-3">
        <label asp-for="StatusPet" class="form-label"></label>
        <select asp-for="StatusPet" asp-items="Html.GetEnumSelectList<Status>()" class="form-control"></select>
        <span asp-validation-for="StatusPet" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PetId" class="form-label"></label>
        <select asp-for="PetId" asp-items="Model.Pets" class="form-select"></select>
        <span asp-validation-for="PetId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ShipDate" class="form-label"></label>
        <input asp-for="ShipDate" class="form-control" />
        <span asp-validation-for="ShipDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Status" class="form-label"></label>
        <select asp-for="Status" asp-items="Html.GetEnumSelectList<StatusOrder>()" class="form-control"></select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="form-check">
        <input type="checkbox" class="form-check-input" asp-for="Complete" />
        <label class="form-check-label" asp-for="Complete"></label>
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>


@section Scripts {
<partial name="_ValidationScriptsPartial" />
<script src="~/js/order.js"></script>
<script>
    const urlObtenerPets = '@Url.Action("ObtenerPets")';
    $(function(){
        inicializarFormularioOrders(urlObtenerPets);
    });
</script>
}


