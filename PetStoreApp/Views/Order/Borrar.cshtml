@using PetStore.Modelos
@model Order
@{
    ViewData["Title"] = "Borrar Orden";
}

<h3 class="mb-3">¿Está seguro de borrar la orden @Model.Id?</h3>
<form asp-action="BorrarOrder">
    <input type="hidden" asp-for="Id"/>
    <button type="submit" class="btn btn-danger">Borrar</button>
    <a asp-action="Index">Cancelar</a>
</form>
